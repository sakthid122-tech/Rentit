generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Property {
  id Int @id @default(autoincrement())

  propertyType String
  propertyName String
  bhkType      String

  floorNumber Int
  totalFloors Int

  description String?

  preferredTenant String

  builtUpArea  Float
  propertyAge  String
  facing       String
  noticePeriod Int

  occupancy     String
  availableFrom DateTime

  location String
  street   String
  locality String
  landmark String?
  pincode  String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Otp {
  id        String   @id @default(uuid())
  mobile    String
  email     String
  otp       String
  expiresAt DateTime
  createdAt DateTime @default(now())
}
